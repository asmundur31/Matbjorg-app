<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="@drawable/border"
    android:id="@+id/parent_layout">

    <LinearLayout
        android:id="@+id/layout_advertisement_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/seller_ad_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_gravity="top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/seller_ad_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nafn" />

            <TextView
                android:id="@+id/seller_ad_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lýsing" />

            <TextView
                android:id="@+id/seller_ad_original_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upphaflegt magn" />

            <TextView
                android:id="@+id/seller_ad_current_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eftirstöðvar" />

            <TextView
                android:id="@+id/seller_ad_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verð" />

            <TextView
                android:id="@+id/seller_ad_expire_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Síðasti söludagur" />

            <Button
                android:id="@+id/seller_ad_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breyta"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>