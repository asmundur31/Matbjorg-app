<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AdvertisementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/ad_image"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/ad_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nafn" />

        <TextView
            android:id="@+id/ad_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verð" />

        <TextView
            android:id="@+id/ad_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Söluaðili" />

        <TextView
            android:id="@+id/ad_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lýsing" />

        <TextView
            android:id="@+id/ad_current_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eftirstöðvar" />

        <TextView
            android:id="@+id/ad_expire_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Síðasti söludagur" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Skrifaðu magn hér"/>

        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_add_to_cart" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>