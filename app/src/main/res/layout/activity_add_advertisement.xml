<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddAdvertisementActivity">

    <TextView
        android:id="@+id/text_settu_inn_upplysingar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Settu inn upplýsingar um vöruna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/textinput_heiti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="16dp"
        android:hint="Heiti"
        android:inputType="text"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@+id/text_settu_inn_upplysingar"/>

    <EditText
        android:id="@+id/textinput_lysing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="16dp"
        android:hint="Lýsing"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@+id/textinput_heiti"/>
    <EditText
        android:id="@+id/textinput_magn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="16dp"
        android:hint="Magn"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@+id/textinput_lysing"/>

    <EditText
        android:id="@+id/textinput_verd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="16dp"
        android:hint="Verð"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@+id/textinput_magn"/>

    <TextView
        android:id="@+id/text_velja_gildistima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="16dp"
        android:text="Velja gildistíma"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@+id/textinput_verd" />

    <CheckBox android:id="@+id/checkbox_tag1"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/tag1"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintTop_toBottomOf="@+id/text_velja_gildistima"
        tools:ignore="MissingConstraints" />

    <CheckBox android:id="@+id/checkbox_tag2"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/tag2"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag1"
        tools:ignore="MissingConstraints" />

    <CheckBox android:id="@+id/checkbox_tag3"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/tag3"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="@+id/checkbox_tag2"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag2"/>

    <CheckBox android:id="@+id/checkbox_tag4"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/tag4"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag3"/>

    <CheckBox android:id="@+id/checkbox_tag5"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/tag5"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="@+id/checkbox_tag4"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag4" />

    <CheckBox android:id="@+id/checkbox_tag6"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/tag6"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="@+id/checkbox_tag5"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag5"/>

    <CheckBox android:id="@+id/checkbox_tag7"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/tag7"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="@+id/checkbox_tag6"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag6"/>

    <CheckBox android:id="@+id/checkbox_tag8"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/tag8"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toEndOf="@+id/checkbox_tag1"
        app:layout_constraintTop_toTopOf="@+id/checkbox_tag1" />

    <CheckBox android:id="@+id/checkbox_tag9"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/tag9"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="@+id/checkbox_tag8"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag8" />

    <CheckBox android:id="@+id/checkbox_tag10"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/tag10"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="@+id/checkbox_tag9"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag9"/>

    <CheckBox android:id="@+id/checkbox_tag11"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/tag11"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="@+id/checkbox_tag10"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag10"/>

    <CheckBox android:id="@+id/checkbox_tag12"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/tag12"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="@+id/checkbox_tag11"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag11"/>

    <CheckBox android:id="@+id/checkbox_tag13"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/tag13"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="@+id/checkbox_tag12"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag12"/>

    <CheckBox android:id="@+id/checkbox_tag14"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/tag14"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="@+id/checkbox_tag13"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag13"/>

    <Button
        android:id="@+id/button_staðfesta_auglýsingu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:text="Staðfesta"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_tag7"/>

</androidx.constraintlayout.widget.ConstraintLayout>